<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:moveWhenScrollAtTop="true"
            motion:touchAnchorId="@id/scrollView"
            motion:touchAnchorSide="top"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@id/guideline1" />
        <Constraint
            android:id="@+id/fragment_weather_info_iv_weather_type_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_current_time"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/fragment_weather_info_tv_temperature"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/fragment_weather_info_tv_weather_type"
            motion:layout_constraintTop_toBottomOf="@id/fragment_weather_info_iv_weather_type_icon"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/fragment_weather_info_tv_weather_type"
            motion:layout_constraintEnd_toEndOf="@id/fragment_weather_info_tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_temperature"
            motion:layout_constraintStart_toStartOf="@id/fragment_weather_info_tv_temperature" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" >
        <Constraint
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@id/guideline3" />
        <Constraint
            android:id="@+id/fragment_weather_info_iv_weather_type_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/fragment_weather_info_tv_temperature"
            motion:layout_constraintTop_toTopOf="@+id/fragment_weather_info_tv_temperature"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_weather_info_tv_weather_type" />
        <Constraint
            android:id="@+id/fragment_weather_info_tv_temperature"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_current_time"
            motion:layout_constraintStart_toEndOf="@+id/fragment_weather_info_iv_weather_type_icon"
            android:scaleX=".5"
            android:scaleY=".5" />
        <Constraint
            android:id="@+id/fragment_weather_info_tv_weather_type"
            motion:layout_constraintEnd_toEndOf="@+id/fragment_weather_info_tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_temperature"
            motion:layout_constraintStart_toStartOf="@id/fragment_weather_info_tv_temperature" />
    </ConstraintSet>
</MotionScene>