<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_info_fragment_background_gradient"
    app:layoutDescription="@xml/fragment_weather_info_scene">

    <TextView
        android:id="@+id/fragment_weather_info_tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_spacing"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Today 15:00" />

    <ImageView
        android:id="@+id/fragment_weather_info_iv_weather_type_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_current_time"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_clear_sky_sun" />

    <TextView
        android:id="@+id/fragment_weather_info_tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_weather_info_tv_weather_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_weather_info_iv_weather_type_icon"
        tools:text="20.1 C" />

    <TextView
        android:id="@+id/fragment_weather_info_tv_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/fragment_weather_info_tv_temperature"
        app:layout_constraintStart_toStartOf="@id/fragment_weather_info_tv_temperature"
        app:layout_constraintTop_toBottomOf="@id/fragment_weather_info_tv_temperature"
        tools:text="Thunder" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_weather_info_tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:background="@android:color/transparent"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_pressure"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1014hpa" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_weather_info_tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:background="@android:color/transparent"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_humidity"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toStartOf="@id/fragment_weather_info_tv_wind_speed"
        app:layout_constraintStart_toEndOf="@id/fragment_weather_info_tv_pressure"
        tools:text="31%" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_weather_info_tv_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:background="@android:color/transparent"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_wind"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3km/h" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_view_top_corners_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_weather_info_tv_today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_today_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_tomorrow_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_tomorrow_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_after_tomorrow_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_after_tomorrow_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_in_two_days_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_in_two_days_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_in_three_days_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="tOMORR" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_in_three_days_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_in_four_days_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_in_four_days_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

            <TextView
                android:id="@+id/fragment_weather_info_tv_in_five_days_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textColor="?attr/colorPrimary"
                tools:text="Today" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_weather_info_rv_in_five_days_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/medium_spacing" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />


</androidx.constraintlayout.motion.widget.MotionLayout>
